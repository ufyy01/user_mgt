<form action="/register" method="POST">
    <h2 class="text-center mt-4">Register</h2>
    <hr>
    <div class="mb-2 mt-2">
        <label for="name" class="form-label">Username</label>
        <input type="text" class="form-control" id="name" name="username">
    </div>
    <div class="mb-2">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-2">
        <label for="Password1" class="form-label">Password</label>
        <input type="password" class="form-control" id="Password1" name="password">
    </div>
    <div class="mb-2">
        <label for="confirmPass" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPass" name="confirmPass">
    </div>
    <div class="mb-2">
        <label for="phone" class="form-label">Phone</label>
        <input type="text" class="form-control" id="phone" name="phone">
    </div>
    <div class="d-flex mt-3">
        <input type="radio" class="form-check-input" id="customer" name="role" value="customer">
        <label class="form-check-label ms-2" for="customer">Customer</label>
        <input type="radio" class="form-check-input ms-5" id="seller" name="role" value="seller">
        <label class="form-check-label ms-2" for="seller">Seller</label>
    </div>
    <div class="text-center my-4">
        <button type="submit" class="btn btn-light">Register</button>
    </div>
</form>